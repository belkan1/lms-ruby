<div class="container">
<%= form_for [:admin,book] do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title,class:'form-control' %>
  </div>
  <% book.errors.full_messages_for(:title).each do |message| %>
    <div class="text-danger"><%= message %></div>
  <% end %>

  <div class="form-group">
    <%= form.label :author %><br>
    <%= form.text_field :author,class:'form-control' %>
  </div>
  <% book.errors.full_messages_for(:author).each do |message| %>
    <div class="text-danger"><%= message %></div>
  <% end %>

  <div class="form-group">
  	<%= form.select :category_id,@categories.map{ |c| [c.name,c.id]},{},{:class=>'form-control'}%>
  </div>

   <div>
    <%= form.submit class:'btn btn-outline-secondary' %>
  </div>
<% end %>
</div>