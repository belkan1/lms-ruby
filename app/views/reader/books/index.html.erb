<div class="jumbotron">
	<h1 class="display-4">View Books</h1>
	<h2 class="display-6"><%#= @category.name %></h2>
</div>

<div class="container">
	<%= form_tag reader_books_path, :method => "get" do %>
	  <div class="form-group">
	    <%= text_field_tag :search%>
	    <%= submit_tag("Search",:name => nil,class: "btn btn-success") %>
	  </div>
  	<% end %>
	<table class="table table-striped">
		<thead>
			<th>id</th>
			<th>Book Title</th>
			<th>Book Author</th>
			<th>Category</th>
		</thead>
		<tbody>
			<% @books.each do |book| %> 
			<tr>
				<td><%= book.id%></td>
				<td><%= book.title %></td>
				<td><%= book.author %></td>
				<td><%= book.category.name %></td>
			</tr>
			<% end%>
		</tbody>
		
	</table>
</div>
